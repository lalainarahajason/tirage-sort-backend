{
    "version": 2,
    "builds": [
        {
            "src": "src/interface/http/server.ts",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/swagger-ui/(.*)",
            "dest": "/public/swagger-ui-dist/$1"
        },
        {
            "src": "/(.*)",
            "dest": "src/interface/http/server.ts"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/process-scheduled-draws",
            "schedule": "0 0 * * *"
        }
    ]
}